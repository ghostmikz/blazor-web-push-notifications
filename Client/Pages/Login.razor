@page "/login"
@using ServerCounterApp.Client.Services
@inject HttpClient Http
@inject NavigationManager Nav
@inject PushNotificationService PushService

@* Use the modern-card class we defined in app.css earlier *@
<div class="modern-card">
    <h3 class="text-center mb-4">Staff Login</h3>
    
    <div class="mb-3">
        <label class="form-label text-muted">Username</label>
        <input @bind="model.Username" class="form-control" placeholder="manager or worker" />
    </div>

    <div class="mb-3">
        <label class="form-label text-muted">Password</label>
        <input @bind="model.Password" type="password" class="form-control" placeholder="password" />
    </div>

    @if (error)
    {
        <div class="alert alert-danger py-2 text-center" style="font-size: 0.9rem;">
            Invalid username or password
        </div>
    }

    <button class="btn btn-primary w-100" @onclick="DoLogin" disabled="@isProcessing">
        @if (isProcessing)
        {
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <span> Verifying...</span>
        }
        else
        {
            <span>Login</span>
        }
    </button>

    <div class="mt-4 text-center text-muted" style="font-size: 0.8rem;">
        Try: <span class="badge bg-light text-dark">manager</span> / <span class="badge bg-light text-dark">password</span>
    </div>
</div>

@code {
    private LoginRequest model = new();
    private bool error = false;
    private bool isProcessing = false;

    private async Task DoLogin()
    {
        error = false;
        isProcessing = true;

        try
        {
            // 1. Authenticate with Server
            var response = await Http.PostAsJsonAsync("api/auth/login", model);

            if (response.IsSuccessStatusCode)
            {
                var user = await response.Content.ReadFromJsonAsync<UserProfile>();

                if (user != null)
                {
                    // 2. Request Subscription using your Professional Service
                    // This pulls the Public Key from appsettings.json automatically
                    try 
                    {
                        var sub = await PushService.SubscribeUserAsync();
                        
                        if (sub != null)
                        {
                            // 3. Register subscription on server linked to this specific user
                            await Http.PostAsJsonAsync($"api/notifications/subscribe/{user.Username}/{user.Role}", sub);
                        }
                    }
                    catch (Exception pushEx)
                    {
                        // Log but don't stop login if they click "Block" or have an old browser
                        Console.WriteLine($"Push Registration Skipped: {pushEx.Message}");
                    }

                    // 4. Redirect based on role
                    if (user.Role == "Manager")
                        Nav.NavigateTo("/manager-dashboard");
                    else
                        Nav.NavigateTo("/employee-portal");
                }
            }
            else
            {
                error = true;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Login Error: {ex.Message}");
            error = true;
        }
        finally
        {
            isProcessing = false;
        }
    }

    public class LoginRequest 
    { 
        public string Username { get; set; } = ""; 
        public string Password { get; set; } = ""; 
    }

    public class UserProfile 
    { 
        public string Username { get; set; } = ""; 
        public string Role { get; set; } = ""; 
    }
}